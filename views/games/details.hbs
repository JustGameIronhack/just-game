<div class="container">
  <section class="mb-3">
    <h1>Game detail</h1>
    <hr class="mt-0" />
    <div class="row d-flex align-items-sm-center">
      <div class="col-lg-4">

        <img class="card-img-top" src="{{game.image}}" alt="Card image cap">
      </div>

      <div class="col-lg-8">
        <div class="card-body text-center">
          <h5 class="card-title fs-2">Title: {{game.title}}</h5>
          <p class="card-text fs-4">Platform: {{game.platform}}</p>
          <p class="card-text fs-4">Description:<em> {{game.description}}</em></p>
          <p class="card-text fs-4">Price: {{game.price}}€</p>
          <p class="card-text fs-4">Uploaded: {{date game.createdAt }}</p>

          {{#checkOwner game currentUser }}
          <a class="btn btn-primary mb-3" href="/games/{{game.id}}/edit"><i class="fa fa-cog me-2"></i>Edit</a>
          <form action="/games/{{game.id}}/delete" method="POST">
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash me-2"></i>Delete</button>
          </form>
          {{/checkOwner}}
        </div>
      </div>
  </section>

  <section class="mt-4">
    <h3>Reviews</h3>
    {{#each game.reviews as |review| }}
    {{#with review}}
    <div class="card mb-2">
      <h5 class="card-header">Title: {{ title }}</h5>
      <div class="card-body">
        <p class="card-text">Rate: {{ rate }}</p>
        <p class="card-text">{{ text }}</p>
        <p class="card-text"><em>{{ user.name }}</em></p>
      </div>
    </div>
    {{/with}}
    {{/each}}

    <form action="/games/{{ game.id }}/reviews" method="post" class="mt-3 mb-3">
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-tag" aria-hidden="true"></i></span>
        </div>
        <input type="text" class="form-control {{#if errors.title }}is-invalid{{/if}}" name="title" placeholder="Title">
        {{#if errors.title }}
        <div class="invalid-feedback">
          {{ errors.title }}
        </div>
        {{/if}}
      </div>
      <div class="input-group mb-1">
        <div class="txt-center">
            <div class="rating">
              <input id="star5" name="rate" type="radio" value="5" class="radio-btn hide" />
              <label for="star5">☆</label>
              <input id="star4" name="rate" type="radio" value="4" class="radio-btn hide" />
              <label for="star4">☆</label>
              <input id="star3" name="rate" type="radio" value="3" class="radio-btn hide" />
              <label for="star3">☆</label>
              <input id="star2" name="rate" type="radio" value="2" class="radio-btn hide" />
              <label for="star2">☆</label>
              <input id="star1" name="rate" type="radio" value="1" class="radio-btn hide" />
              <label for="star1">☆</label>
              <div class="clear"></div>
            </div>
        </div>
        {{#if errors.rate }}
        <div class="invalid-feedback">
          {{ errors.rate }}
        </div>
        {{/if}}
      </div>
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-comment-o" aria-hidden="true"></i></span>
        </div>
        <textarea name="text" class="form-control {{#if errors.text }}is-invalid{{/if}}" rows="3"></textarea>
        {{#if errors.text }}
        <div class="invalid-feedback">
          {{ errors.text }}
        </div>
        {{/if}}
      </div>

      <button type="submit" class="btn btn-primary mt-1">Create a Review</button>
    </form>

  </section>
</div>