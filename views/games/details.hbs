<div class="container">
  <section class="mb-3">

    <h1>Game detail</h1>

    <hr class="mt-0" />

    <div class="card">
      <img class="card-img-top" src="{{game.image}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">Title: {{game.title}}</h5>
        <p class="card-text">Platform: {{game.platform}}</p>
        <p class="card-text">Price: {{game.price}}</p>

        <div class="d-flex">
          <a class="btn btn-primary mr-3" href="/games/{{game.id}}/edit"><i class="fa fa-cog mr-2"></i>Edit</a>

          <form action="/games/{{game.id}}/delete" method="POST">
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash mr-2"></i>Delete</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-4">
    <h3>Reviews</h3>
    {{#each game.reviews as |review| }}
    {{#with review}}
    <div class="card mb-2">
      <h5 class="card-header">Title: {{ title }}</h5>
      <div class="card-body">
        <p class="card-text">Rate: {{ rate }}</p>
        <p class="card-text">{{ text }}</p>
      </div>
    </div>
    {{/with}}
    {{/each}}

    <form action="/games/{{ game.id }}/reviews" method="post" class="mt-3 mb-3">
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-tag" aria-hidden="true"></i></span>
        </div>
        <input type="text" class="form-control {{#if errors.title }}is-invalid{{/if}}" name="title" placeholder="Title">
        {{#if errors.title }}
        <div class="invalid-feedback">
          {{ errors.title }}
        </div>
        {{/if}}
      </div>
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-star-o" aria-hidden="true"></i></span>
        </div>
        <input type="number" name="rate" class="form-control {{#if errors.rate }}is-invalid{{/if}}"
          placeholder="Your rate"></input>
        {{#if errors.rate }}
        <div class="invalid-feedback">
          {{ errors.rate }}
        </div>
        {{/if}}
      </div>
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-comment-o" aria-hidden="true"></i></span>
        </div>
        <textarea name="text" class="form-control {{#if errors.text }}is-invalid{{/if}}" rows="3"></textarea>
        {{#if errors.text }}
        <div class="invalid-feedback">
          {{ errors.text }}
        </div>
        {{/if}}
      </div>

      <button type="submit" class="btn btn-primary mt-1">Create a Review</button>
    </form>

  </section>
</div>