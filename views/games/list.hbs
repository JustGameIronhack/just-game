<div class="container">
    <form action="/games?page=1" method="post">
    <div class="input-group flex-nowrap">
        <span class="input-group-text"><i class="fa fa-search"></i></span>
        <input type="text" class="form-control" value="{{search}}" name="search" placeholder="Search a game">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>

    </form>
    <div class="row d-flex align-items-center">
        {{#each games as | game |}}
        <div class="col col-lg-4 mb-5 d-flex align-items-center flex-column">
            <div class="imageContainer">
                <img src="{{game.image}}" class="mb-2 mt-3 imageList mainShadow" alt="game-image">
            </div>
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title fw-bold fs-4">{{game.title}}</h5>
                    <h4 class="card-text">{{game.platform}}</h4>
                </div>
                <ul class="list-group list-group-flush fs-5">
                    <li class="list-group-item">Genre: <em>{{stringSpace game.genre}}</em></li>
                    <li class="list-group-item">Price: {{game.price}}â‚¬</li>
                    <li class="list-group-item">Uploaded by: <a href="/userInfo/{{game.user.id}}">{{game.user.name}}</a> <em>{{date game.createdAt}}</em></li>
                    <li class="list-group-item d-flex justify-content-around"><a class="btn btnRegular" href="/game/{{game._id}}/message">Contact</a> <a href="/details/{{game.id}}" class="btn btnRegular">Details</a></li>
                </ul>
            </div>
        </div>
        {{/each}}
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end fixed-bottom me-5">
            <li class="page-item"><a class="page-link" href="/games?page={{previous page}}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="/games?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="/games?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="/games?page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="/games?page={{next page count}}">Next</a></li>
        </ul>
    </nav>
    <div id="map"></div>
</div>