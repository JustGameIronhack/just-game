<section>
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <h1>Upload New Game</h1>
                <h3>Enter the details of the game you want sell!</h3>
            </div>
        </div>
        <hr class="mt-0">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form action="/games/new" method="POST" class="row g-3" enctype="multipart/form-data">
                            <div class="input-group mb-1">
                                <label class="form-label">Game Image</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-picture-o"></i></span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="image-input" name="image">
                                        <label class="custom-file-label" for="image-input">Upload Image</label>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-1">
                                <label for="validationCustomUsername" class="form-label">Game Title</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-gamepad"
                                            aria-hidden="true"></i></span>
                                    <input placeholder="Enter the title of the game" value="{{game.title}}" name="title"
                                        type="text" class="form-control {{isInvalid errors.title}}"
                                        aria-describedby="inputGroupPrepend">
                                    {{formError errors.title}}
                                </div>
                            </div>
                            <div class="input-group mb-1">
                                <label for="validationCustomUsername" class="form-label"><i class="fa fa-renren"></i> Genre</label>
                                <div class="input-group row">
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action"
                                            id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Action
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                    <div class="form-check col col-lg-3">
                                        <input class="form-check-input" type="radio" name="Action-Adventure"
                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
