                                            id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Action-Adventure
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-1">
                                <label for="validationCustomUsername" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-lock"
                                            aria-hidden="true"></i></span>
                                    <input placeholder="Please, enter your password" name="password" type="password"
                                        class="form-control {{isInvalid errors.password}}"
                                        aria-describedby="inputGroupPrepend">
                                    {{formError errors.password}}
                                </div>
                            </div>
                            <div class="input-group mb-1">
                                <label for="validationCustomUsername" class="form-label">Repeat password</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-lock"
                                            aria-hidden="true"></i></span>
                                    <input placeholder="Please, repeat your password" name="passwordMatch"
                                        type="password" class="form-control {{isInvalid errors.passwordMatch}}"
                                        aria-describedby="inputGroupPrepend">
                                    {{formError errors.passwordMatch}}
                                </div>
                            </div>
