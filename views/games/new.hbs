<section class="backgroundNewGame">
    <div class="container rounded-3 p-5">
        <div>
            <div class="col-12 d-flex align-items-center">
                <h1>Upload New Game</h1>
            </div>
            <div>
                <h3>Enter the details of the game you want to sell!</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-12">
                <form action="/games/new" method="POST" class="row g-3" enctype="multipart/form-data">
                    <div class="input-group mb-1">
                        <label class="form-label">Game Image</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-picture-o"></i></span>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input form-control {{isInvalid errors.image}}"
                                    id="image-input" name="image">
                            </div>
                            {{formError errors.image}}
                        </div>
                    </div>
                    <div class="input-group mb-1">
                        <label for="validationCustomUsername" class="form-label">Game Title</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-gamepad"
                                    aria-hidden="true"></i></span>
                            <input placeholder="Enter the title of the game" value="{{game.title}}" name="title"
                                type="text" class="form-control {{isInvalid errors.title}}"
                                aria-describedby="inputGroupPrepend">
                            {{formError errors.title}}
                        </div>
                    </div>
                    <div class="input-group mb-1">
                        <label for="validationCustomUsername" class="form-label"><i class="fa fa-renren"></i>
                            Genre</label>
                        <div class="input-group row">
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Action"
                                    id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Action
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Action-Adventure"
                                    id="flexCheckDefault2">
                                <label class="form-check-label" for="flexCheckDefault2">
                                    Action-Adventure
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Adventure"
                                    id="flexCheckDefault3">
                                <label class="form-check-label" for="flexCheckDefault3">
                                    Adventure
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Family"
                                    id="flexCheckDefault3">
                                <label class="form-check-label" for="flexCheckDefault3">
                                    Family
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Role-playing"
                                    id="flexCheckDefault4">
                                <label class="form-check-label" for="flexCheckDefault4">
                                    Role-playing
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Simulation"
                                    id="flexCheckDefault5">
                                <label class="form-check-label" for="flexCheckDefault5">
                                    Simulation
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Strategy"
                                    id="flexCheckDefault6">
                                <label class="form-check-label" for="flexCheckDefault6">
                                    Strategy
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Sports"
                                    id="flexCheckDefault7">
                                <label class="form-check-label" for="flexCheckDefault7">
                                    Sports
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="MMO"
                                    id="flexCheckDefault8">
                                <label class="form-check-label" for="flexCheckDefault8">
                                    MMO
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Shooter"
                                    id="flexCheckDefault9">
                                <label class="form-check-label" for="flexCheckDefault9">
                                    Shooter
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Sandbox"
                                    id="flexCheckDefault10">
                                <label class="form-check-label" for="flexCheckDefault10">
                                    Sandbox
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="eSports"
                                    id="flexCheckDefault10">
                                <label class="form-check-label" for="flexCheckDefault10">
                                    eSports
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Horror"
                                    id="flexCheckDefault11">
                                <label class="form-check-label" for="flexCheckDefault11">
                                    Horror
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Fight"
                                    id="flexCheckDefault12">
                                <label class="form-check-label" for="flexCheckDefault12">
                                    Fight
                                </label>
                            </div>
                            <div class="form-check col-6 col-lg-3">
                                <input class="form-check-input" type="checkbox" name="genre[]" value="Hack and Slash"
                                    id="flexCheckDefault13">
                                <label class="form-check-label" for="flexCheckDefault13">
                                    Hack and Slash
                                </label>
                            </div>
                            {{formError errors.genre}}
                        </div>
                    </div>
                    <div class="input-group mb-1">
                        <label for="validationCustomUsername" class="form-label">Platforms</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-laptop"
                                    aria-hidden="true"></i></span>
                            <select name="platform" class="form-select {{isInvalid errors.platform}}"
                                aria-label="Default select example">
                                <option selected>Choose the platform of your game</option>
                                <option value="PS1">PS1</option>
                                <option value="PS2">PS2</option>
                                <option value="PS3">PS3</option>
                                <option value="PS4">PS4</option>
                                <option value="PS5">PS5</option>
                                <option value="XBOX">XBOX</option>
                                <option value="XBOX 360">XBOX 360</option>
                                <option value="XBOX One">XBOX One</option>
                                <option value="XBOX Series">XBOX Series</option>
                                <option value="Nintendo64">Nintendo64</option>
                                <option value="Nintendo GameCube">Nintendo GameCube</option>
                                <option value="Game Boy">Game Boy</option>
                                <option value="Nintendo DS">Nintendo DS</option>
                                <option value="Nintendo Wii">Nintendo Wii</option>
                                <option value="Nintendo 2DS">Nintendo 2DS</option>
                                <option value="Nintendo 3DS">Nintendo 3DS</option>
                                <option value="Nintendo Wii U">Nintendo Wii U</option>
                                <option value="Nintendo Switch">Nintendo Switch</option>
                                <option value="PC">PC</option>
                                <option value="Other">Other</option>
                            </select>
                            {{formError errors.platform}}
                        </div>
                    </div>
                    <div class="input-group mb-1">
                        <label for="validationCustomUsername" class="form-label">Description</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-commenting-o"
                                    aria-hidden="true"></i></span>
                            <textarea name="description" type="text"
                                class="form-control {{isInvalid errors.description}}" id="text"
                                placeholder="Describe, in a few words, your game"
                                rows="5">{{ game.description }}</textarea>
                            {{formError errors.description}}
                        </div>
                    </div>
                    <div class="input-group mb-1">
                        <label for="validationCustomUsername" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-eur"
                                    aria-hidden="true"></i></span>
                            <input value="{{game.price}}" step=".01"
                                placeholder="Please, enter the price you want to sell your game" name="price"
                                type="number" class="form-control {{isInvalid errors.price}}"
                                aria-describedby="inputGroupPrepend">
                            {{formError errors.price}}
                        </div>
                    </div>
                    <div class="input-group mb-1">
                        <label for="gameLocation" class="form-label">Locations of your Game</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-map-marker"
                                    aria-hidden="true"></i></span>
                            <input id="autocomplete" placeholder="Game Location" type="text" name="location"
                                value="{{game.location}}">
                            <input id="latitude" type="hidden" name="latitude">
                            <input id="longitude" type="hidden" name="longitude">
                        </div>
                        <p><em>*Try to accurate your location for a better google map marker</em></p>
                    </div>
                    <div class="input-group mb-1 d-flex justify-content-end">
                        <button class="btn btnRegular btn-block w-25" type="submit">Sell it!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>