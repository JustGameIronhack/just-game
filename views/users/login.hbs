<div class="backgroundIndex">
    <div class="container-sm">
        <div class="row">
            <div class="col-lg-12 text-center">
                <img class="imageLogo img-fluid"
                    src="https://res.cloudinary.com/djrv6yqfc/image/upload/v1613901524/Just_game_logo_ALT_Mesa_de_trabajo_1_ezq8t3.png">
            </div>
            <div class="col-12 col-lg-12 mx-auto">
                {{#if verification}}
                <div class="alert alert-warning" role="alert">
                    Please verify your email account.
                </div>
                {{/if}}
                <form action="/login" method="POST" class="row mx-auto w-50">
                    <div class="col-md-12">
                        <label for="validationCustomUsername" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-envelope-o"
                                    aria-hidden="true"></i></span>
                            <input placeholder="Please, enter your email" value="{{user.email}}" name="email"
                                type="text" class="form-control {{isInvalid errors.email}}"
                                aria-describedby="inputGroupPrepend">
                            {{formError errors.email}}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label for="validationCustomUsername" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa fa-lock"
                                    aria-hidden="true"></i></span>
                            <input placeholder="Please, enter your password" name="password" type="password"
                                class="form-control {{isInvalid errors.password}}" aria-describedby="inputGroupPrepend">
                            {{formError errors.password}}
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <button class="btn btnRegular" type="submit">Login</button>
                    </div>
                </form>
                <hr class="mx-auto">
                <div class="d-flex flex-column align-items-center">
                    <a class="btn btnGoogle mb-3 w-25" href="/authenticate/google"><i class="fa fa-google"></i> Login
                        with
                        Google</a>
                    <a class="btn btnSteam mb-3 w-25" href="/authenticate/steam"><i class="fa fa-steam"></i> Login with
                        Steam</a>
                </div>
            </div>
        </div>
    </div>
</div>